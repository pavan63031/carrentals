<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Signup</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #e0eafc, #cfdef3);
    }

    /* Navbar */
    nav {
      background-color: #333;
      color: white;
      padding: 15px 30px;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    nav a {
      color: white;
      text-decoration: none;
      margin-left: 15px;
      font-weight: 500;
    }

    nav a:hover {
      text-decoration: underline;
    }

    /* Centered Page Container */
    .page-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: calc(100vh - 60px);
      padding: 20px;
    }

    .login-container {
      background-color: #fff;
      padding: 40px 35px;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 25px;
      color: #333;
      font-size: 24px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 12px;
      margin-bottom: 18px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 15px;
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #4285f4;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #357ae8;
    }

    .radio-group,
    .checkbox-group {
      margin-bottom: 18px;
      font-size: 14px;
    }

    .radio-group p {
      margin-bottom: 8px;
      color: #333;
      font-weight: 500;
    }

    .radio-group label,
    .checkbox-group label {
      margin-right: 12px;
      display: inline-flex;
      align-items: center;
    }

    .radio-group input,
    .checkbox-group input {
      margin-right: 6px;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
    }

    ul {
      padding-left: 20px;
      margin-bottom: 15px;
    }

    ul li {
      color: red;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <header>
    <%- include('partials/nav') %>
  </header>

  <!-- Signup Form -->
  <div class="page-container">
    <div class="login-container">
      <% if (errors && errors.length > 0) { %>
        <ul>
          <% errors.forEach((error) => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      <% } %>

      <h2>Sign Up</h2>
      <form action="/signup" method="POST">
        <input type="text" name="firstname" placeholder="First Name" value="<%= oldInput ? oldInput.firstname : '' %>" required />
        <input type="text" name="lastname" placeholder="Last Name" value="<%= oldInput ? oldInput.lastname : '' %>" required />
        <input type="email" name="email" placeholder="Email" value="<%= oldInput ? oldInput.email : '' %>" required />
        <input type="password" name="password" placeholder="Password" required />
        <input type="password" name="confirmpassword" placeholder="Confirm Password" required />

        <div class="radio-group">
          <p>Account Type:</p>
          <label>
            <input type="radio" name="accountType" value="user"
              <%= oldInput && oldInput.accountType === 'user' ? 'checked' : '' %> required />
            User
          </label>

          <label>
            <input type="radio" name="accountType" value="host"
              <%= oldInput && oldInput.accountType === 'host' ? 'checked' : '' %> required />
            Host
          </label>
        </div>

        <div class="checkbox-group">
          <input type="checkbox" name="check" id="checked" required />
          <label for="checked">I agree to the Terms and Conditions</label>
        </div>

        <button type="submit">Sign Up</button>
      </form>
    </div>
  </div>

</body>
</html>
